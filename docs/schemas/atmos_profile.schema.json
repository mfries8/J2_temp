{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/atmos_profile.json",
  "title": "AtmosphericProfile",
  "type": "object",
  "required": ["levels"],
  "properties": {
    "$schema": {"type": "string"},
    "meta": {
      "type": "object"
    },
    "levels": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "altitude_m",
          "pressure_Pa",
          "temperature_K",
          "wind_u_mps",
          "wind_v_mps"
        ],
        "properties": {
          "altitude_m": {"type": "number"},
          "pressure_Pa": {"type": "number"},
          "pressure_hPa": {"type": "number"},
          "temperature_K": {"type": "number"},
          "temperature_C": {"type": "number"},
          "wind_u_mps": {"type": "number"},
          "wind_v_mps": {"type": "number"},
          "wind_w_mps": {"type": "number"},
          "wind_speed_mps": {"type": "number"},
          "wind_dir_deg": {"type": "number"}
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
